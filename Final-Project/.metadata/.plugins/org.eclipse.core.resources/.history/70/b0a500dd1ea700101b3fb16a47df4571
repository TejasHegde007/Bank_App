server:
  port: 8081

spring:
  application:
    name: userservice
  datasource:
    url: jdbc:oracle:thin:@localhost:1521:orcl
    username: bank
    password: admin
    driver-class-name: oracle.jdbc.OracleDriver

  jpa:
    hibernate:
      ddl-auto: update
    properties:
      hibernate:
        dialect: org.hibernate.dialect.OracleDialect
    show-sql: true

